# Configuration d'exemple pour le déploiement en production
# Copier ce fichier vers .env et modifier les valeurs

# Mode debug (False en production)
DEBUG=False

# Clé secrète Django (générer une nouvelle clé pour la production)
# Utilisez: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-make-it-very-long-and-random

# Hosts autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,votre-domaine.com,www.votre-domaine.com

# Configuration de la base de données
# SQLite (par défaut - recommandé pour démarrer)
DATABASE_URL=sqlite:///db.sqlite3

# Pour la production, vous pouvez utiliser PostgreSQL ou MySQL :
# PostgreSQL (exemple)
# DATABASE_URL=postgresql://user:password@localhost:5432/rockyconverter

# MySQL (exemple)
# DATABASE_URL=mysql://user:password@localhost:3306/rockyconverter

# Configuration des médias et fichiers statiques
MEDIA_ROOT=/path/to/media/
STATIC_ROOT=/path/to/static/

# Limites d'upload
DATA_UPLOAD_MAX_NUMBER_FILES=5000
DATA_UPLOAD_MAX_MEMORY_SIZE=5368709120
FILE_UPLOAD_MAX_MEMORY_SIZE=5368709120

# Configuration email (pour les notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Configuration du nettoyage automatique
CLEANUP_DAYS=14
CLEANUP_LOG_PATH=/var/log/rocky_converter_cleanup.log

# Sécurité (production uniquement - appliqué automatiquement si DEBUG=False)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
